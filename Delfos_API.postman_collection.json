							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}"
							]
						},
						"description": "Obtém uma coleção específica por ID (sem fontes de dados)"
					},
					"response": []
				},
