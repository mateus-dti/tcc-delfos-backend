						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}?details=true",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}"
							],
							"query": [
								{
									"key": "details",
									"value": "true",
									"description": "Inclui todas as fontes de dados associadas"
								}
							]
						},
						"description": "Obtém uma coleção com todas as informações completas, incluindo lista de fontes de dados associadas"
					},
					"response": []
				},
				{
					"name": "Atualizar Coleção",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Coleção Atualizada\",\n  \"description\": \"Nova descrição\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}"
							]
						},
						"description": "Atualiza uma coleção (apenas o dono pode atualizar)"
					},
					"response": []
				},
				{
					"name": "Excluir Coleção",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}"
							]
						},
						"description": "Exclui uma coleção (soft delete - apenas o dono pode excluir)"
					},
					"response": []
				},
				{
					"name": "Listar Fontes de Dados da Coleção",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}/datasources",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}",
								"datasources"
							]
						},
						"description": "Lista todas as fontes de dados associadas a uma coleção"
					},
					"response": []
				},
				{
					"name": "Associar Fonte de Dados à Coleção",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"dataSourceId\", jsonData.id);",
									"    console.log(\"Fonte de dados associada com ID:\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"PostgreSQL Production\",\n  \"type\": \"PostgreSQL\",\n  \"connectionUriEncrypted\": \"postgresql://user:password@localhost:5432/dbname\",\n  \"metadata\": {\n    \"host\": \"localhost\",\n    \"port\": 5432,\n    \"database\": \"dbname\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}/datasources",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}",
								"datasources"
							]
						},
						"description": "Associa uma nova fonte de dados a uma coleção. Tipos válidos: PostgreSQL, MongoDB"
					},
					"response": []
				},
				{
					"name": "Desassociar Fonte de Dados da Coleção",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections/{{collectionId}}/datasources/{{dataSourceId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections",
								"{{collectionId}}",
								"datasources",
								"{{dataSourceId}}"
							]
						},
						"description": "Desassocia uma fonte de dados de uma coleção (soft delete - apenas o dono da coleção pode desassociar)"
					},
					"response": []
				}
			]
