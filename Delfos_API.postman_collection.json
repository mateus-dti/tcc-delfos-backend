		},
		{
			"name": "Coleções",
			"item": [
				{
					"name": "Criar Coleção",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"collectionId\", jsonData.id);",
									"    console.log(\"Coleção criada com ID:\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Minha Coleção\",\n  \"description\": \"Descrição da minha coleção\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/collections",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections"
							]
						},
						"description": "Cria uma nova coleção (requer autenticação)"
					},
					"response": []
				},
				{
					"name": "Listar Coleções",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections?page=1&pageSize=10&orderBy=createdAt&orderDirection=DESC",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections"
							],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Número da página (padrão: 1)"
								},
								{
									"key": "pageSize",
									"value": "10",
									"description": "Itens por página (padrão: 10)"
								},
								{
									"key": "search",
									"value": "",
									"description": "Busca por nome ou descrição",
									"disabled": true
								},
								{
									"key": "orderBy",
									"value": "createdAt",
									"description": "Ordenar por: name ou createdAt"
								},
								{
									"key": "orderDirection",
									"value": "DESC",
									"description": "Direção: ASC ou DESC"
								}
							]
						},
						"description": "Lista todas as coleções do usuário autenticado com paginação, filtros e busca. Retorna: items[], total, page, pageSize, totalPages. Cada item inclui dataSourcesCount."
					},
					"response": []
				},
				{
					"name": "Buscar Coleções",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/collections?search=produção&page=1&pageSize=10",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"collections"
							],
							"query": [
								{
									"key": "search",
									"value": "produção",
									"description": "Busca por nome ou descrição (case-insensitive)"
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "pageSize",
									"value": "10"
								}
							]
						},
						"description": "Busca coleções por nome ou descrição"
					},
					"response": []
				},
				{
					"name": "Obter Coleção por ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
